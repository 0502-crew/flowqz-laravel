@import url('https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c:400,900');

primary-color     = #277aaf;
primary-color-v   = #379acf;
secondary-color   = #d0bb57;
secondary-color-v   = #e0db77;
darkgrey          = #272727;
grey              = #91949a;
lightgrey         = #f1f4fa;

font-logo         = "M PLUS Rounded 1c", sans-serif;

.container
    padding-bottom 25px
.card-header
    background-color: primary-color;
    color: lightgrey;
.card
    background-color: lightgrey;
    color: darkgrey;
    button
        background-color: primary-color;
        border-color: primary-color;
    button:hover
        background-color: primary-color-v;
        border-color: primary-color;
.header-logo-nav
    font-size: 1.2em;
    font-family: font-logo;
    font-weight: 900;
    text-shadow: 2px 2px 0px #fff, 4px 4px 0px #eee;
    text-decoration: none !important;
    text-align: center;
    padding-left: 10px
    +above(575px)
        font-size: 1.55em
.first-logo
    color: primary-color
.second-logo
    color: secondary-color

.popular {
    .popular-title {
        font-size: 1.6em;
    }
    .cards {
        display: flex;
        width: 100%
        justify-content space-around
    }
    .card {
        position: relative;
        width: 260px;
        height: 320px;
        background: #000;
    }
    .card .image {
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    .card .image img {
        width: 100%;
        transition: .5s;
    }
    .card:hover .image img {
        opacity: .5;
        transform: translateX(30%);/*100%*/
    }
    .card .details {
        position: absolute;
        top: 0;
        left: 0;
        width: 70%;/*100%*/
        height: 100%;
        background: secondary-color;
        transition: .5s;
        transform-origin: left;
        transform: perspective(2000px) rotateY(-90deg);
    }
    .card:hover .details {
        transform: perspective(2000px) rotateY(0deg);
    }
    .card .details .center {
        padding: 20px;
        text-align: center;
        background: #fff;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
    }
    .card .details .center h1 {
        margin: 0;
        padding: 0;
        color: primary-color;
        line-height: 20px;
        font-size: 20px;
        text-transform: uppercase;
    }
    .card .details .center h1 span {
        font-size: 14px;
        color: #262626;
    }
    .card .details .center p {
        margin: 10px 0;
        padding: 0;
        color: #262626;
    }
    .card .details .center ul {
        margin: 10px auto 0;
        padding: 0;
        display: table;
    }
    .card .details .center ul li {
        list-style: none;
        margin: 0 5px;
        float: left;
    }
    .card .details .center ul li a {
        display: block;
        background: #262626;
        color: #fff;
        width: 30px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        transform: .5s;
    }
    .card .details .center ul li a:hover {
        background: primary-color;
    }
}
.we
    align-content: center
    .we-title
        font-weight 700
        font-size 2rem
    img
        width 200px
        height 200px
        object-fit cover
        border-radius: 50%;
        border 20px solid primary-color
    .team
        display flex
        justify-content space-evenly
        .coder
            justify-content center
            align-content: center
            padding 20px

.footer
    .footer-container
        background-color darkgrey
        width 100%
        display: flex
        justify-content space-around
        vertical-align middle
        color lightgrey
        border-top 2px solid grey
        min-height 120px
        padding 20px 40px
        a
            color secondary-color
            &:hover
                color: secondary-color-v
        .social-icon
            display inline-block
            padding 5px
            font-size 2rem
