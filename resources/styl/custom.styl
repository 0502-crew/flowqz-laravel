@import url('https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c:400,900')
@import url('https://fonts.googleapis.com/css?family=Josefin+Sans')

primary-color      = #277aaf
primary-color-v    = #379acf
secondary-color    = #d0bb57
secondary-color-v  = #e0db77
darkgrey           = #272727
grey               = #91949a
lightgrey          = #f1f4fa
footer-height      = 180px

font-logo          = "M PLUS Rounded 1c", sans-serif
font-header        = "Josefin Sans", sans-serif

mobile             = 576px
tablet             = 768px
desktop            = 992px

html
    min-height: 100%
    position: relative
body
    margin-bottom: footer-height + 110px
    +above(mobile)
        margin-bottom: footer-height  + 90px
    +above(desktop)
        margin-bottom: footer-height
.txt-header
    font-family: font-header
    font-weight: bold
    font-size: 2rem
    text-shadow: 3px 3px 0px #fff, 5px 5px 0px #eee
    text-align: center

.card-header
    background-color: primary-color
    color: lightgrey
.card
    background-color: lightgrey
    color: darkgrey
    button
        background-color: primary-color
        border-color: primary-color
    button:hover
        background-color: primary-color-v
        border-color: primary-color
.header-logo-nav
    font-size: 1.2em
    font-family: font-logo
    font-weight: 900
    text-shadow: 2px 2px 0px #fff, 4px 4px 0px #eee
    text-decoration: none !important
    text-align: center
    padding-left: 10px
    +above(mobile)
        font-size: 1.55em
.first-logo
    color: primary-color
.second-logo
    color: secondary-color

.popular
    .cards
        display: flex
        width: 100%
        justify-content space-around
    .card
        position: relative
        width: 260px
        height: 320px
        background: #000
    .card .image
        width: 100%
        height: 100%
        overflow: hidden
    .card .image img
        width: 100%
        transition: .5s
    .card:hover .image img
        opacity: .5
        transform: translateX(30%) /*100%*/
    .card .details
        position: absolute
        top: 0
        left: 0
        width: 70%/*100%*/
        height: 100%
        background: secondary-color
        transition: .5s
        transform-origin: left
        transform: perspective(2000px) rotateY(-90deg)
    .card:hover .details
        transform: perspective(2000px) rotateY(0deg)
    .card .details .center
        padding: 20px
        text-align: center
        background: #fff
        position: absolute
        top: 50%
        transform: translateY(-50%)
    .card .details .center h1
        margin: 0
        padding: 0
        color: primary-color
        line-height: 20px
        font-size: 20px
        text-transform: uppercase
    .card .details .center h1 span
        font-size: 14px
        color: #262626
    .card .details .center p
        margin: 10px 0
        padding: 0
        color: #262626
    .card .details .center ul
        margin: 10px auto 0
        padding: 0
        display: table
    .card .details .center ul li
        list-style: none
        margin: 0 5px
        float: left
    .card .details .center ul li a
        display: block
        background: #262626
        color: #fff
        width: 30px
        height: 30px
        line-height: 30px
        text-align: center
        transform: .5s
    .card .details .center ul li a:hover
        background: primary-color
.we
    align-content: center
    img
        width 110px
        height 110px
        object-fit cover
        border-radius: 50%
        border 5px solid primary-color
        border-top 4px solid secondary-color
        transition all 0.5s ease
        +above(mobile)
            width 190px
            height 190px
            border 9px solid primary-color
            border-top 9px solid secondary-color
            border-left 12px solid secondary-color
            &:hover
                border 9px solid secondary-color
                border-top 9px solid primary-color
                border-left 12px solid primary-color
    .team
        display flex
        justify-content space-evenly
        .coder
            text-align: center
            align-content: center
            padding: 20px
            font-weight: bold
            .name
                padding-top: 10px
            .desc
               font-weight: normal
               font-size: 0.9rem
               padding: 10px
.footer
    position absolute
    bottom 0
    width 100%
    min-height footer-height
    background-color darkgrey
    width 100%
    justify-content space-around
    border-top 2px solid grey
    .footer-container
        vertical-align middle
        color lightgrey
        padding 20px 40px
        a
            color secondary-color
            &:hover
                color: secondary-color-v
        .social-icon
            display inline-block
            padding 5px
            font-size 2rem
.flexized
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
